<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.manan.dev.ec2018app">

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
    android:name=".Utilities.MyApplication"
    android:icon="@drawable/ec_app_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".Utilities.ConnectivityReciever"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".ContentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".UserLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".SingleEventActivity"
            android:label="Culmyca 2018"
            android:parentActivityName=".CategoryEventDisplayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="elementsculmyca.com"
                    android:pathPrefix="/event/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="www.elementsculmyca.com"
                    android:pathPrefix="/event/"
                    android:scheme="http" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryEventDisplayActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".Xunbao.XunbaoActivity"
            android:parentActivityName=".ContentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/xunbao_main_theme" />
        <activity
            android:name=".DevelopersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".EventRegister"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Tickets"
            android:screenOrientation="portrait"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".CommentActivity"
            android:label="Comments"
            android:parentActivityName=".CulmycaTimesActivity"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".CulmycaTimesActivity"
            android:parentActivityName=".ContentActivity"
            android:theme="@style/CodeFont1"/>
        <activity
            android:name=".AboutActivity"
            android:theme="@style/CodeFont" />

        <service
            android:name=".MyNotificationService"
            android:enabled="true" />

        <receiver android:name=".MyNotificationResponse" />

        <activity android:name=".BrixxActivity"
            android:theme="@style/CodeFont"></activity>
    </application>

</manifest>