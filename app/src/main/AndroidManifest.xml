<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.manan.dev.ec2018app">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ec_app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ContentActivity"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".UserLoginActivity"
            android:theme="@style/CodeFont">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleEventActivity"
            android:label="[Event Name]"
            android:parentActivityName=".CategoryEventDisplayActivity"/>
        <activity
            android:name=".OtpVerificationActivity"
            android:theme="@style/CodeFont" />
        <activity
            android:name=".CategoryEventDisplayActivity"
            android:theme="@style/CodeFont" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>