<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/slliderview_pager"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <ImageView
                android:id="@+id/ddss"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/topleftbasic_vector" />

            <ImageView
                android:id="@+id/drawerTogglebtn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_drag_handle_black_24dp" />

            <ImageView
                android:id="@+id/ds"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:src="@drawable/logo_300" />

            <LinearLayout
                android:id="@+id/layoutDots"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/text_viewcategories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/categories_underline_view"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/futura"
                android:text="Categories"
                android:textColor="@color/White"
                android:textSize="32sp" />


            <View
                android:id="@+id/categories_underline_view"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_above="@+id/category_recycler_view"
                android:background="@color/baseLight" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/category_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:scrollbars="none" />

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>