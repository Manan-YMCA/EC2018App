<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Black"

    tools:context="com.manan.dev.ec2018app.Fragments.DashboardSliderFragment3">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="50dp"
        android:background="#000">

        <LinearLayout
            android:id="@+id/dsb_tap"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/vector_circle"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/futura"
                android:gravity="center_horizontal"
                android:text="Informal\nEvents!"
                android:textColor="@color/White"
                android:textSize="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/futura"
                android:text="Events hosted by Brixx Team"
                android:textColor="@color/White" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura"
                android:gravity="center_horizontal"
                android:text="Mr and Ms Culmyca"
                android:textColor="@color/White"
                android:textSize="22dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura"
                android:gravity="center_horizontal"
                android:text="Fashion Show"
                android:textColor="@color/White"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura"
                android:gravity="center_horizontal"
                android:text="Stand Up Comedy"
                android:textColor="@color/White"
                android:textSize="22dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/futura"
                android:gravity="center_horizontal"
                android:text="Star Night"
                android:textColor="@color/White"
                android:textSize="22dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
