<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage"
    android:background="@drawable/redpoint">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura"
        android:text="Elements Culmyca"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="110dp"
        android:visibility="gone"
        android:id="@+id/text1"
        />
    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/eclogo"
        android:adjustViewBounds="true"
        android:visibility="gone"
        />
    <com.victor.loading.newton.NewtonCradleLoading
        android:id="@+id/newton_cradle_loading"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="78dp"
        />
    <View
        android:layout_width="310dp"
        android:layout_height="2.5dp"
        android:layout_marginTop="360dp"
        android:background="#ffffff"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to enjoy?"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="373dp"
        android:fontFamily="@font/futura"
        android:visibility="gone"
        android:id="@+id/text2"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#e23d3d"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="50dp"
        android:text="login with facebook"
        android:paddingTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:textSize="21sp"
        android:fontFamily="@font/futura"
        android:visibility="gone"
        android:id="@+id/loginbutton"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as a  "
        android:textColor="@color/white"
        android:textSize="23sp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="500dp"
        android:id="@+id/text3"
        android:fontFamily="@font/futura"
        android:visibility="gone"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guest?"
        android:textColor="#d53a3a"
        android:layout_toRightOf="@id/text3"
        android:layout_marginTop="500dp"
        android:textSize="23sp"
        android:fontFamily="@font/futura"
        android:visibility="gone"
        android:id="@+id/text4"

        />

</RelativeLayout>
