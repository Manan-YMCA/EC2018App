<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    android:orientation="vertical"
    tools:context="com.manan.dev.ec2018app.UserLoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/futura"
        android:text="Elements Culmyca"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:id="@+id/ECText"
        />
    <ImageView
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/EClogo"
        android:visibility="gone"
        />
    <com.victor.loading.newton.NewtonCradleLoading
        android:id="@+id/newton_cradle_loading"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="315dp"
        android:layout_centerHorizontal="true"
        />
    <View
        android:layout_width="310dp"
        android:layout_height="2.5dp"
        android:layout_marginTop="360dp"
        android:background="#ffffff"
        android:layout_centerHorizontal="true"
        android:id="@+id/view" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to enjoy?"
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="373dp"
        android:fontFamily="@font/futura"
        android:visibility="gone"
        android:id="@+id/ReadyText"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#e23d3d"
        android:layout_marginTop="420dp"
        android:layout_centerHorizontal="true"
        android:text="login with facebook"
        android:paddingTop="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="5dp"
        android:textSize="21sp"
        android:fontFamily="@font/futura"
        android:visibility="gone"
        android:id="@+id/LoginButton"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as a  "
        android:textColor="#ffffff"
        android:textSize="23sp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="480dp"
        android:id="@+id/ContinueText"
        android:fontFamily="@font/futura"
        android:visibility="gone"

        />

    <TextView
        android:id="@+id/GuestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ContinueText"
        android:layout_alignBottom="@+id/ContinueText"
        android:layout_toEndOf="@+id/ContinueText"
        android:layout_toRightOf="@+id/ContinueText"
        android:fontFamily="@font/futura"
        android:text="Guest?"
        android:textColor="#d53a3a"
        android:textSize="23sp"
        android:visibility="gone" />


</RelativeLayout>
