<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    tools:context="com.manan.dev.ec2018app.LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/logo_300" />

    <View
        android:id="@+id/view"
        android:layout_width="180dp"
        android:layout_height="3.5dp"
        android:layout_below="@id/logo"
        android:background="@color/baseDark" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/futura"
        android:text="Mobile Login"
        android:textColor="@color/White"
        android:textSize="35dp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_login"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/futura"
        android:text="Enter your phone number\nto Continue."
        android:textColor="@color/White"
        android:textSize="16dp"

        />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_phone"
            android:layout_width="40dp"

            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_local_phone" />

        <EditText
            android:id="@+id/mobileNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="Phone Number"
            android:inputType="number"
            android:padding="16dp"
            android:shadowColor="@color/baseDark"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="15dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/td"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/futura"
        android:text="Your number will be verified with \n a One-Time-Password."
        android:textColor="@color/White"
        android:textSize="16dp" />


    <Button
        android:id="@+id/login_mobileNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/td"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/baseDark"
        android:fontFamily="@font/futura"
        android:padding="16dp"
        android:text="Submit"
        android:textColor="@color/White"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_register_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_mobileNum"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/futura"
        android:text="Haven't completed the details? Click Here!"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/need_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/futura"
        android:padding="20dp"
        android:text="Need Help?"
        android:textColor="@color/White" />
</RelativeLayout>