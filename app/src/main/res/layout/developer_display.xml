<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/White"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="0.4">

            <ImageView
                android:id="@+id/dev_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/default_image" />

            <ProgressBar
                android:id="@+id/pb_dev_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/refresh_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/reload"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_weight="0.6"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/dev_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:gravity="center"
                android:text="Shubham Sharma"
                android:textColor="@color/Black"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dev_name"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/dev_linkdin"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/linkedinlogo" />

                <ImageView
                    android:id="@+id/dev_github"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:src="@drawable/github_logo" />

            </LinearLayout>

            <TextView
                android:id="@+id/dev_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_links"
                android:fontFamily="@font/futura"
                android:gravity="center"
                android:text="Core App Developer"
                android:textAlignment="center"
                android:textSize="12sp" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>