<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manan.dev.ec2018app.Xunbao.AboutFragment"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/question_layout">

        <ImageView
            android:id="@+id/xunbaoimg"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ec_app_logo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xunbaoimg"
            android:padding="20dp"
            android:textSize="18sp"
            android:text="OH YES BABY!"
            android:textAlignment="center"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/answer"
            android:layout_width="300dp"
            android:textSize="18sp"
            android:hint="Write your answer here!"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/question"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:visibility="gone"
            />
        <Button
            android:id="@+id/submit"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/answer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="SUBMIT"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/progress_bar"/>
        <TextView
            android:id="@+id/contest_ends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:padding="20dp"
            android:textAlignment="center"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/refresh_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ec_app_logo"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refresh_button"
            android:text="Problem Loading!\nIf the problem continues, kindly report an error"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>
</FrameLayout>