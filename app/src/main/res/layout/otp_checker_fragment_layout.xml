<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/otp_layout_background">

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/vector_phone" />

        <TextView
            android:id="@+id/tv_heading_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_phone"
            android:fontFamily="@font/futura"
            android:padding="4dp"
            android:text="Phone Authentication"
            android:textAlignment="center"
            android:textColor="@color/Black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_heading_view"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/ll_edit_texts">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_otp_dig_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="4dp"
                    android:textSize="26sp"
                    android:background="@drawable/otp_edit_text_background"/>

                <EditText
                    android:id="@+id/et_otp_dig_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="4dp"
                    android:textSize="26sp"
                    android:background="@drawable/otp_edit_text_background"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp" />

                <EditText
                    android:id="@+id/et_otp_dig_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="4dp"
                    android:textSize="26sp"
                    android:background="@drawable/otp_edit_text_background"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp">

                <EditText
                    android:id="@+id/et_otp_dig_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="4dp"
                    android:textSize="26sp"
                    android:background="@drawable/otp_edit_text_background"/>

                <EditText
                    android:id="@+id/et_otp_dig_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="4dp"
                    android:textSize="26sp"
                    android:background="@drawable/otp_edit_text_background"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"  />

                <EditText
                    android:id="@+id/et_otp_dig_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:maxLength="1"
                    android:padding="4dp"
                    android:textSize="26sp"
                    android:background="@drawable/otp_edit_text_background"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"  />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_display_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_edit_texts"
            android:layout_marginTop="12dp"
            android:textSize="12sp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:fontFamily="@font/futura"
            android:text="A message with a verification code has been sent to your device. Please enter and Continue!!"/>

        <TextView
            android:id="@+id/tv_otp_resend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_display_text"
            android:layout_marginTop="6dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:fontFamily="@font/futura"
            android:textSize="12sp"
            android:padding="4dp"
            android:text="Didn't get a verification code?"/>

    </RelativeLayout>

</RelativeLayout>