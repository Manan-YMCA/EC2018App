<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manan.dev.ec2018app.OtpVerificationActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verify Your"
        android:textColor="@color/baseLight"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textColor="@color/baseLight"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/baseLight"
        android:textSize="25sp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/White"
        android:text="Enter Your Number Here!!"
        android:textAlignment="center"
        android:padding="7dp"
        android:inputType="number"
        tools:ignore="TextFields" />

    <TextView
        android:id="@+id/tv_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify!!"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/baseDark"
        android:layout_marginTop="70dp"/>

    <EditText
        android:id="@+id/et_otp_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="– – –        – – –"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/baseLight"
        android:backgroundTint="@color/baseLight"
        android:inputType="number"/>

</LinearLayout>
