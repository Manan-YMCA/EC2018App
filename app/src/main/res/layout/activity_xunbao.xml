<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manan.dev.ec2018app.Xunbao.XunbaoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/xunbao_back"
        android:layout_marginBottom="56dp">
        <ImageView
            android:id="@+id/xunbao_heading"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:gravity=""
            android:src="@drawable/xunbao_logo" />
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/xunbao_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:menu="@menu/xunbao_bottom_nav_menu"
        android:background="#290101"
        android:theme="@style/XunbaoTheme"
        app:itemTextColor="@color/xunbao_nav_bar_selector"
        app:itemIconTint="@color/xunbao_nav_bar_selector"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/xunbao_view_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/xunbao_nav_bar"/>

</RelativeLayout>
