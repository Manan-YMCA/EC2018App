<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.manan.dev.ec2018app.EventRegister"
    android:background="#000000"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/logo_in_event"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/logo_300"
        android:layout_gravity="center_horizontal"
        />

    <View
        android:id="@+id/view_in_event"
        android:layout_width="180dp"
        android:layout_height="3.5dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/baseDark" />

    <TextView
        android:id="@+id/event_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/futura"
        android:text="EventName"
        android:textColor="@color/White"
        android:textSize="30sp" />
        <TextView
            android:id="@+id/person_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/futura"
            android:layout_marginTop="30dp"
            android:text="Person 1"
            android:textColor="@color/White"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/event_reg_main_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginEnd="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="15sp"
            android:maxLines="1"
            android:singleLine="true"/>





        <EditText
            android:id="@+id/event_reg_main_mob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginEnd="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="Mobile No."
            android:inputType="phone"
            android:padding="8dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="15sp"
            android:maxLines="1"
            android:singleLine="true"/>

    <EditText
        android:id="@+id/event_reg_main_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/futura"
        android:hint="Name"
        android:padding="8dp"
        android:shadowColor="@color/White"
        android:textColor="@color/White"
        android:textColorHint="@color/White"
        android:textSize="15sp"
        android:singleLine="true"/>
        <EditText
            android:id="@+id/event_reg_main_clg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginEnd="52dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="52dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="College"
            android:padding="8dp"
            android:textColor="@color/White"
            android:textColorHint="@color/White"
            android:textSize="15sp"
            android:maxLines="1"
            android:singleLine="true"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/inflate_layout">

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/add_member"
            android:background="@color/baseDark"
            android:fontFamily="@font/futura"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Add member"
            android:textColor="@color/White"
            android:textSize="18sp"

            tools:ignore="RtlSymmetry"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_reg_event"
            android:background="@color/baseDark"
            android:layout_marginLeft="50dp"
            android:fontFamily="@font/futura"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Register"
            android:textColor="@color/White"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            tools:ignore="RtlSymmetry"/>

    </LinearLayout>
    </LinearLayout>


</ScrollView>
