<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rectangle_fbdialogbox"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/facebook_icon"
            android:id="@+id/fblogin"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White"
            android:fontFamily="@font/futura"
            android:text="Integrate With Facebook "
            android:textSize="22sp"
            android:layout_below="@id/fblogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:id="@+id/tv1"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:id="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:textColor="@color/White"
        android:fontFamily="@font/futura"
        android:textSize="15sp"
        android:text="Get your photo featured with"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv2"
            android:id="@+id/tv3"
            android:layout_centerHorizontal="true"
            android:textColor="@color/White"
            android:fontFamily="@font/futura"
            android:textSize="15sp"
            android:text="Element Culmyca photo frame"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv3"
            android:id="@+id/tv4"
            android:layout_centerHorizontal="true"
            android:textColor="@color/White"
            android:fontFamily="@font/futura"
            android:textSize="15sp"
            android:text="Share with your friends and much more!"/>
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_marginLeft="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv4"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            />
    </RelativeLayout>

</RelativeLayout>