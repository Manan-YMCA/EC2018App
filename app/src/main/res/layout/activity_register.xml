<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Black"
    tools:context="com.manan.dev.ec2018app.RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/logo_300" />

    <View
        android:id="@+id/view"
        android:layout_width="180dp"
        android:layout_height="2dp"
        android:layout_below="@id/logo"
        android:background="@color/baseDark" />

    <TextView
        android:id="@+id/txt_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/futura"
        android:paddingRight="12dp"
        android:text="Registration"
        android:textColor="@color/White"
        android:textSize="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_wel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_reg"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/futura"
                android:text= "WELCOME"
                android:textColor="@color/White"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/txt_ec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_wel"
                android:fontFamily="@font/futura"
                android:text="to the chaos"
                android:textAllCaps="true"
                android:textColor="@color/baseDark"
                android:textSize="18dp" />

            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/txt_fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/futura"
                android:text="Register for Culmyca 18!"
                android:textColor="@color/White"
                android:textSize="15dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_reg_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="Name"
            android:padding="12dp"
            android:shadowColor="@color/White"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textColorHint="#ddd"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/et_reg_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/et_reg_name"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textColorHint="#ddd"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/et_reg_clg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/et_reg_email"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="College"
            android:maxLines="1"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textColorHint="#ddd"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/et_reg_mob"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/et_reg_clg"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:fontFamily="@font/futura"
            android:hint="Mobile No."
            android:inputType="phone"
            android:maxLines="1"
            android:padding="12dp"
            android:singleLine="true"
            android:textColor="@color/White"
            android:textColorHint="#ddd"
            android:textSize="13sp" />


        <RelativeLayout
            android:id="@+id/hint_set"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/et_reg_mob"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/baseDark"
            tools:targetApi="kitkat">


            <TextView
                android:id="@+id/tv_reg_submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/futura"
                android:gravity="center"
                android:padding="5dp"
                android:text="All set to fire?"
                android:textColor="@color/White"
                android:textSize="18dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_log_in"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@id/hint_set"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/futura"
            android:text="Already a User? Login"
            android:textAlignment="center"
            android:textColor="@color/White"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>

