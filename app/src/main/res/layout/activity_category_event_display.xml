<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="com.manan.dev.ec2018app.CategoryEventDisplayActivity">

    <ImageView
        android:id="@+id/ec_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_300" />

    <LinearLayout
        android:id="@+id/ll_event_category_photo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ec_logo"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/jh" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[Event Category]"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="30sp" />

            <View
                android:layout_width="280dp"
                android:layout_height="2dp"
                android:layout_gravity="right"
                android:layout_marginTop="35dp"
                android:background="#CE5952" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_single_event_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_event_category_photo_name"
        android:orientation="vertical"/>


</RelativeLayout>
